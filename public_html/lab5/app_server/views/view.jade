extends layout

block content
    h1=title
    p
        a(href="../") Home
    p=removed
    table(border="1")
        thead   
            tr
                th First Name
                th Last Name
                th Department
                th Start Date
                th Job Title
                th Salary
        tbody
        - each stuff in results
            tr
                td 
                    = stuff.firstname
                td 
                    = stuff.lastname
                td 
                    = stuff.department
                td 
                    = stuff.startdate
                td
                    = stuff.jobtitle
                td
                    - stuff.salary
                td
                    a(href="../update/#{stuff._id}") Update
                td
                    a(href="../view/#{stuff._id}") Delete